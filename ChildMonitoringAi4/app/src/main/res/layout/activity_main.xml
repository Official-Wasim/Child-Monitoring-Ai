<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F5F5F5"> <!-- Light Background Color -->

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome,"
    android:layout_marginBottom="10dp"
    android:textStyle="bold" /> 

    <TextView
        android:id="@+id/currentUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current User Email"
        android:textSize="18sp" />

    <!-- Add this before the Logout Button -->
    <Button
        android:id="@+id/managePermissionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Manage Permissions"
        android:drawableStart="@drawable/ic_permissions"
        android:padding="12dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>



    <!-- Add this before the Logout Button -->
    <Button
        android:id="@+id/hideAppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide App"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
</LinearLayout>
